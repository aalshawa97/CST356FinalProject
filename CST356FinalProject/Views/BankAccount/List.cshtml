@model IEnumerable<CST356FinalProject.Models.View.BankAccountViewModel>
@{
    ViewBag.Title = "Bank Accounts";
}
<h2>List</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { userId = ViewBag.UserId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                @Html.ActionLink("UserAccount", "List", "UserAccount", new { userId = item.Id }, null)
            </td>
        </tr>
    }
</table>
